mixin header(link, text)
    a(href= link).text-white-50.text-decoration-none.mx-2.px-4.header-control= text

mixin navbar()
    nav.navbar.navbar-expand-lg.bg-light.py-4
        .container
            a.navbar-brand(href='index.html').me-4
                img(src='./public/images/icons/logo-01.png' alt='IMG-LOGO')
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item
                        a.nav-link(aria-current='page' href='index.html') Home
                    li.nav-item
                        a.nav-link(href='shop.html') Shop                   
                    li.nav-item.dropdown.nav-item-hot(data-item='hot')
                        a.nav-link.active(href='shoping-cart.html') Features
                    li.nav-item
                        a.nav-link(href='blog.html') Blog                 
                    li.nav-item
                        a.nav-link(href='about.html') About                  
                    li.nav-item
                        a.nav-link(href='contact.html') Contact
                .d-flex.justify-content-between
                    .icon-header-item.px-3(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal')
                        i.zmdi.zmdi-search
                    .icon-header-item.icon-header-noti(data-notify='0').px-3
                        i.zmdi.zmdi-shopping-cart
                    .icon-header-item.icon-header-noti(href='#' data-notify='0').px-3
                        i.zmdi.zmdi-favorite-outline

mixin categories(link, name)
    li.list-group-item.py-3
        a.text-secondary.text-decoration-none.active(href= link)= name

mixin product(link, src, name, price)
    li.d-flex
        a.mb-4.me-4(href= link)
            img(src= src alt='PRODUCT')
            a.text-decoration-none.active.text-secondary(href= link)
                p.fw-bold.pt-4= name
                span.text-secondary= price

mixin archive(link, mouth, day)
    li.list-group-item.align-items-start.py-3
        a.d-flex.justify-content-between.text-decoration-none.text-secondary.active.fw-bold(href= link)
            span= mouth
            span= day

mixin tags(link, name)
    a.text-decoration-none.text-body-secondary.tag.fs-6.px-3.py-1.me-2.mb-1(href= link)= name

mixin footerCategory(link, name)
    li.list-group-item.align-items-start.py-1
        a.d-flex.justify-content-between.text-decoration-none.text-secondary.active(href= link)
            span= name

mixin banner-left(src, day, month)
    .product.position-relative
        a(href="./blog_detail.html").text-dark
            img(src= src alt='IMG-BLOG').img-fluid.img-product
            .product-date.position-absolute
                .date
                    span.fw-bold.fs-1.ps-3= day
                    p.text-center= month
    +blog-product('8 Inspiring Ways to Wear Dresses in the Winter', 'Class aptent taciti sociosqu ad litora torquent per conubia nostra, per inceptos himenaeos. Fusce eget dictum tortor. Donec dictum vitae sapien eu varius', '22 Jan, 2018', 'StreetStyle, Fashion, Couple', '8 Comments')

mixin blog-product(title, description, date, address, comment)
    .product-description.my-5
        a(href="./blog_detail.html").text-dark.text-decoration-none
            h3.fw-bold.active= title 
        .description.py-4.text-secondary= description
        span
            span
                span.text-secondary By 
                | Admin
            span.px-2 |
                span.px-2= date
            span | 
                span.px-2= address
            span | 
                span.px-2= comment
            span
                a(href="./blog_detail.html").text-dark.text-decoration-none.active.fw-bold
                    | CONTINUE READING 
                    i.fa.fa-long-arrow-right.m-l-9

mixin pagination()
    .d-flex
        a.pagin.active-pagination(href='#')
            | 1
        a.pagin(href='#')
            | 2

mixin top-contect(src, text)
    .blog.position-relative
        img(src= src, alt="IMG-BLOG").img-fluid
        p.position-absolute.fs-1.fw-bold.text-white.start-50.top-50= text

mixin banner(src)
    if src == 'blog-detail'
        .container
            .path.mb-5.ms-4
                a(href="index.html").text-decoration-none.active.text-body-secondary Home 
                    i.fa.fa-angle-right.m-l-9.m-r-10(aria-hidden="true")
                a(href="blog.html").text-decoration-none.active.text-body-secondary  Blog 
                    i.fa.fa-angle-right.m-l-9.m-r-10(aria-hidden="true")
                span.text-decoration-none.text-body-tertiary  8 Inspiring Ways to Wear Dresses in the Winter
        include ../pug/banner
    else if src == 'blog'
        +top-contect("./public/images/bg-02.jpg", 'Blog')
        .container
            .row
                .col-md-8
                    .container
                        //- banner left
                        +banner-left('./public/images/blog-04.jpg', '22', 'Jan 2018')
                        +banner-left('./public/images/blog-05.jpg', '18', 'Jan 2018')
                        +banner-left('./public/images/blog-06.jpg', '16', 'Jan 2018')
                .col-md-4
                    .container
                        //- banner right  
                        include ../pug/banner_right
            +pagination()
        include ../pug/control
    else if src == 'contact' 
        include ../pug/contact
    else 
        include ../pug/about

